@model MVCClinicaMedica.Models.Usuario;
@{
    ViewData["Title"] = "Registro de Médico";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registro Doctor</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Style.css" /> <!-- Enlace al archivo CSS externo -->
</head>
<body style="background-image: url('/img/doctor.jpg'); background-size: cover; background-repeat: no-repeat;">


    <div class="container mt-5 pt-5">

        <div class="row justify-content-center">
            <div class="col-12 col-xl-4 col-md-6">

                <div class="card">
                    <div class="card-header">
                        Registro Doctor
                    </div>
                    <div class="card-body">

                        <form asp-controller="Usuario" asp-action="RegistrarDoctor" method="post">
                            <input class="form-control mb-3" type="email" placeholder="Correo" required asp-for="Correo" />           
                            <input class="form-control mb-3" type="password" placeholder="Contraseña" required asp-for="Password" />
                            <div class="d-grid gap-2 mb-3">
                                <button class="btn btn-primary" type="submit">Registrar</button>
                            </div>
                            @if (ViewData["Mensaje"] != null)
                            {

                                <div class="form-group">
                                    <div class="alert alert-danger" role="alert">
                                        @ViewData["Mensaje"]
                                    </div>
                                </div>
                            }
                        </form>
                       
                    </div>
                    
                </div>

            </div>
        </div>
        <a href="@Url.Action("Usuarios","Usuario")" class="btn btn-primary">Regresar</a>

    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
