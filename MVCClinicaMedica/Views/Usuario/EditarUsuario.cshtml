@model Usuario
@{
    ViewData["Title"] = "Editar Usuario";
}

<div class="container">
    <h3>Editar Usuario</h3>
    <br />
    <a asp-controller="Usuario" asp-action="Usuarios" class="btn btn-primary">Cancelar</a>
</div>

<div class="container">
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

    <form method="post" asp-action="ActualizarUsuario">
        <input type="hidden" asp-for="idUsuario" />
        <input type="hidden" asp-for="idRol" />


        <div class="form-group">
            <span asp-validation-for="Correo" class="text-danger"></span>
            <label asp-for="Correo" class="control-label"></label>
            <input asp-for="Correo" class="form-control" />
        </div>

        <div class="form-group">
            <span asp-validation-for="Password" class="text-danger"></span>
            <label asp-for="Password" class="control-label"></label>
            <input type="password" asp-for="Password" class="form-control" />
        </div>

        <div class="form-group">
            <input type="submit" value="Editar Usuario" class="btn btn-primary" />
        </div>
    </form>
</div>

@section Scripts {
    <script>
        // Tu script de JavaScript aquí si es necesario
    </script>
}
