@{
    ViewData["Title"] = "Bienvenido Paciente";
    Layout = null;
}
@model Paciente
@{
    var listaCitas = (List<Cita>)ViewData["citas"];
    var listaPacientes = (List<Paciente>)ViewData["pacientes"];
    var listaMedicos = (List<Medico>)ViewData["medicos"];
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Bienvenido Paciente</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            background-image: url('https://cuidadores.unir.net/images/formacion/Cursos/bienestarfamiliar.jpg'); /* Cambia la ruta de la imagen de fondo */
            background-size: cover;
            background-repeat: no-repeat;
            height: 100vh;
            font-family: Arial, sans-serif;
            position: relative;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        .mensaje {
            position: absolute;
            top: 20px;
            left: 20px;
            color: white;
            font-size: 24px;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        }

        .botones {
            display: flex;
            gap: 20px;
            margin-top: 20px;
        }

        .boton {
            padding: 10px 20px;
            background-color: #007bff;
            color: white;
            border: none;
            cursor: pointer;
            font-size: 16px;
        }

            .boton:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <div class="mensaje">
        <h1>Bienvenido Paciente</h1>
    </div>
    
@*    <-- extraer el id del paciente que entre para pasarle a los botones y que no este quemado el val -->
*@    
    <form method="post" asp-action="VerCitas">
        <div>

            <span asp-validation-for="Cedula" class="text-danger"></span>
            <label for="Name">Cedula del Paciente</label>
            <input asp-for="Cedula" class="form-control" type="text" maxlength="10" />

        </div>
        <div class="form-group">
            <input type="submit" value="Ver Citas Medicas" class="btn btn-primary" />
        </div>
    </form>
     
    <!-- Formulario para búsqueda por cédula -->
    <form action="@Url.Action("BuscarCedulaPaciente", "Paciente")" method="post" class="mt-4">
        <div class="input-group">
            <input type="text" class="form-control" name="cedula" placeholder="Ingrese el número de cédula">
            <div class="input-group-append">
                <button class="btn btn-primary" type="submit">Buscar Paciente</button>
            </div>
        </div>
    </form>

    <!-- Mostrar los resultados -->
    @if (listaCitas != null)
    {
        <table class="table mt-4">
            <thead>
                <tr>
                    <th>ID Cita</th>
                    <th>ID Paciente</th>
                    <th>Nombre Paciente</th>
                    <th>ID Medico</th>
                    <th>Nombre Medico</th>
                    <th>Fecha</th>
                    <!-- Otros campos -->
                </tr>
            </thead>
            <tbody>
                @foreach (var cita in listaCitas)
                {
                    <tr>
                        <td>@cita.idCita</td>
                        <td>@cita.idPaciente</td>
                        <td>@listaPacientes.FirstOrDefault(m => m.idPaciente == cita.idPaciente)?.Nombre</td>
                        <td>@cita.idMedico</td>
                        <td>@listaMedicos.FirstOrDefault(m => m.idMedico == cita.idMedico)?.Nombre</td>
                        <td>@cita.Fecha</td>
                        <!-- Otros campos -->
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h1>NO hay citas</h1>
    }
    @*  <div class="botones">
        <a href="@Url.Action("VerCitas", "Paciente", new { idPaciente = 4 })" class="boton">Ver Citas del Paciente 3</a>
    </div>*@

</body>
</html>
