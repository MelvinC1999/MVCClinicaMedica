@model Cita

<h2>Detalles de la Cita</h2>

<table class="table">
@*    <tr>
        <th>Id</th>
        <td>@Model.idCita</td>
    </tr>*@
    <tr>
        <th>Fecha</th>
        <td>@Model.Fecha.ToShortDateString()</td>
    </tr>
    <tr>
        <th>Paciente</th>
        <td>@Model.Pacientes?.Nombre</td>
    </tr>
</table>

<h3>Detalles del Paciente</h3>
<table class="table">
    <tr>
        <th>Nombre</th>
        <td>@Model.Pacientes?.Nombre</td>
    </tr>
    <tr>
        <th>Edad</th>
        <td>@Model.Pacientes?.Edad</td>
    </tr>
    <tr>
        <th>Historia Clínica</th>
        <td>@Model.Pacientes?.HistoriaClinica</td>
    </tr>
</table>

<h3>Registros Medicos</h3>
<table class="table">
    <thead>
        <tr>
            <th>Fecha</th>
            <th>Descripción</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var registro in Model.Pacientes?.RegistrosMedicos)
        {
            <tr>
                <td>@registro.Fecha.ToShortDateString()</td>
                <td>@registro.Descripcion</td>
            </tr>
        }
    </tbody>
</table>

<h3>Agregar Registro Médico</h3>
<form asp-controller="Medico" asp-action="AgregarRegistro" method="post">
    <input type="hidden" name="idCita" value="@Model.idCita" />
    <div class="form-group">
        <label for="descripcion">Descripción</label>
        <textarea class="form-control" id="descripcion" name="descripcion" rows="3" required></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Agregar Registro</button>
</form>


<a href="/Medico/Login">Volver</a>
