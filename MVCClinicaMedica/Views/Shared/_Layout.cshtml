<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MVCClinicaMedica</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MVCClinicaMedica.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="~/css/custom-styles.css"> <!-- Agrega esta línea para cargar tus estilos personalizados -->
</head>
<body class="bg-custom d-flex flex-column">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light p-3 mb-2 bg-info text-dark border-bottom box-shadow mb-3">
            <div class="container-fluid ">
                <img class="portada" src="~/img/clinica.png">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="d-flex justify-content-between align-items-center row justify-content-between ">
                    <div class="col-sm-4">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item border-2 btn btn-info" href="#" role="button">
                                <a class="nav-link text-dark fw-bold" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>                           
                            <li class="nav-item border-2 btn btn-info" href="#" role="button">
                                <a class="nav-link text-dark fw-bold" asp-area="" asp-controller="Admin" asp-action="OpcionesAdmin">Reserva de Citas</a>
                            </li>
                            <li class="nav-item border-2 btn btn-info" href="#" role="button">
                                <a class="nav-link text-dark fw-bold" asp-area="" asp-controller="Facturas" asp-action="CFacturas">Facturación</a>
                            </li>
                            <li class="nav-item border-2 btn btn-info" href="#" role="button">
                                <a class="nav-link text-dark fw-bold" asp-area="" asp-controller="Paciente" asp-action="Bienvenida">Paciente</a>
                            </li>
                            <li class="nav-item border-2 btn btn-info" href="#" role="button">
                                @*<a class="nav-link text-dark fw-bold" asp-area="" asp-controller="Medico" asp-action="Login">Menu de Médico</a>*@
                                <a class="nav-link text-dark fw-bold" asp-area="" asp-controller="Medico" asp-action="Login">Menu de Médico</a>

                            </li>
                            <li class="nav-item border-2 btn btn-info">
                                <a class="nav-link text-dark fw-bold" asp-area="" asp-controller="Usuario" asp-action="Usuarios">Usuarios</a>
                            </li>
                            <li class="nav-item border-2 btn btn-info" href="#" role="button">
                                <a class="nav-link text-dark fw-bold" asp-area="" asp-controller="Home" asp-action="CerrarSesion">Cerrar Sesión</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container flex-grow-1">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-auto">
        <div class="container text-center">
            &copy; 2023 - Doctoralia Internet SL - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>